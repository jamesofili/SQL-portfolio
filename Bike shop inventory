SELECT * FROM inventory ORDER BY price;

/* Total quantity and value of inventory */
SELECT SUM(quantity) AS 'Total stock', SUM(quantity * price) AS 'Total stock value' FROM inventory;

/* Breakdown of inventory by the type of bike including above statistics, as well as the number of brands and range of bike prices for each type */
SELECT type AS 'Type of bike', SUM(quantity) AS 'Stock', SUM(quantity * price) AS 'Stock value', COUNT(brand) AS 'Number of brands', MIN(price) AS 'Lowest price', MAX(price) AS 'Highest price' FROM inventory
GROUP BY type ORDER BY SUM(quantity * price) DESC;
